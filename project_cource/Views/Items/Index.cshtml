@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<div class="container">

<partial name="_Notifications"/>



    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary-emphasis">
                Items View
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="NewPost" class="btn btn-secondary">
                <i class="bi bi-plus-lg me-1"></i>
                Add New Post
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Item Name
                </th>
                <th>
                    Item Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                        <span>LE</span>
                    </td>              
                    <td>
                        @item.Category.Name
                    </td>
                    <td class="text-end">
                        <a asp-controller="Items" asp-action="ReadItem" asp-route-id="@item.Id" class="btn btn-outline-secondary py-2 px-3 me-2">
                            <i class="bi bi-door-open"></i>
                        </a>
                        <a asp-controller="Items" asp-action="EditItem" asp-route-id="@item.Id" class="btn btn-outline-light py-2 px-3 me-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form method="post" style="display:inline">
                        <button type="submit" asp-controller="Items" asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-outline-dark py-2 px-3 me-2">
                            <i class="bi bi-x-lg"></i>
                        </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

